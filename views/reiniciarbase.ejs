    <link rel="stylesheet" href="./stylesheets/style.css" />

    <script src="./scripts/nav.js"></script>
    <script type="text/javascript">
        function remover() {
            $('#loader').show();
            $('#btnRemove').hide();

            $.post("./compare/reset", function (data) {
                $('#loader').hide();
                $('#message').show();
            });
        }

        $(function () {
            $('#loader').hide();
            $('#message').hide();
        });
    </script>
</head>
<title>Colyde -> NLP Based Deep Search for Collidences</title>

<body>
    <div id="navContainer"></div>

    <div class="container">
        <br />
        <br />
        <h3>Clear the database?</h3>
        <br />
        <br />
        <button type="button" id="btnRemove" class="btn btn-dark btn-lg" onclick="remover()">Clear</button>
        <img id="loader" src="./images/loader.gif" />
        <h3 style="color: green;" id="message">
            <br/>The database has successfully reset.</h3>
    </div>
</body>

